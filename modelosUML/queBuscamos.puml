@startuml

hide empty description

state HACER as "<b>Que sepan hacer\n<b>lo que hacen los profesionales</b>" {
    state HACER1 as "Capacidad de revisar y mantener\ncódigo propio y ajeno"
    state HACER2 as "Habilidad de justificar\nsus decisiones técnicas\nante clientes y pares"
    state HACER3 as "Competencia de modificar\nimplementaciones\nante nuevos requisitos"
    state HACER4 as "Responsabilidad\nsobre el código entregado:\ndeontología"

}

state DISTINGUIR as "<b>Distinguir quien *entiende*\n<b>de quien memoriza</b>" {
    state DISTINGUIR1 as "Identificar\nquién realmente comprende\nfrente a quién memorizó patrones"
    state DISTINGUIR2 as "Detectar cuando alguien entrega\ncódigo que no entiende\nsea de IA, compañeros o internet"
    state DISTINGUIR3 as "Valorar\nla evolución del pensamiento\ny no solo el resultado final"
}

state COPIAR as "<b>Que copiar no tenga sentido</b>"  {
    state COPIAR1 as "Si cada examen es único\nporque deriva del código único\nde cada estudiante"
    state COPIAR2 as "Copiar\nse vuelve un problema\nte examinan sobre código que no entiendes"
    state COPIAR3 as "Revisiones evolutivas permiten\ndetectar cambios repentinos de estilo"
}


state PREPARAR as "<b>Preparar con IA\n<b>para una realidad profesional\n<b>(con IA)</b>" {
    state PREPARAR1 as "Usar IA como herramienta legítima\ncon responsabilidad\nsobre lo entregado"
    state PREPARAR2 as "Documentar el proceso de creación\ny no solo el producto"
    state PREPARAR3 as "Demostrar capacidad de gestión\nAuditar, corregir y extender lo entregado"
}

HACER -[hidden]r-> DISTINGUIR
DISTINGUIR -[hidden]d-> COPIAR
COPIAR -[hidden]l-> PREPARAR

HACER1 -[hidden]-> HACER2
HACER2 -[hidden]-> HACER3
HACER3 -[hidden]-> HACER4

DISTINGUIR1 -[hidden]-> DISTINGUIR2
DISTINGUIR2 -[hidden]-> DISTINGUIR3

COPIAR1 -[hidden]-> COPIAR2
COPIAR2 -[hidden]-> COPIAR3

PREPARAR1 -[hidden]-> PREPARAR2
PREPARAR2 -[hidden]-> PREPARAR3

@enduml